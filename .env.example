# AfterLight FastAPI Backend Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AfterLight API
VERSION=1.1.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=your-super-secret-key-change-in-production-please-use-a-very-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (for production/staging)
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=

# Individual database components (alternative to DATABASE_URL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=afterlight
DATABASE_USER=postgres
DATABASE_PASSWORD=

# =============================================================================
# REDIS CONFIGURATION (for rate limiting and caching)
# =============================================================================
# Redis URL (optional, for production)
# Format: redis://hostname:port/database_number
REDIS_URL=redis://localhost:6379/0

# Individual Redis components (alternative to REDIS_URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://afterlight.app,https://www.afterlight.app

# Trusted hosts for production
ALLOWED_HOSTS=localhost,127.0.0.1,afterlight.app,www.afterlight.app

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API Key (for AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Supabase (if using Supabase for additional features)
SUPABASE_URL=
SUPABASE_KEY=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@afterlight.app

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PRINT SERVICES (for keepsakes)
# =============================================================================
# Printful API Key (for physical products)
PRINTFUL_API_KEY=

# Lob API Key (for direct mail)
LOB_API_KEY=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable detailed error messages and API docs
# Set to false in production for security
ENABLE_DEBUG_ROUTES=true

# =============================================================================
# PRODUCTION SETTINGS (override above for production)
# =============================================================================
# Uncomment and modify these for production deployment
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# ALLOWED_ORIGINS=https://afterlight.app,https://www.afterlight.app
# ALLOWED_HOSTS=afterlight.app,www.afterlight.app
# ENABLE_DEBUG_ROUTES=false
